<p id="notice"><%= notice %></p>

<h1>Listing Address Books</h1>

<%= form_tag address_books_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %> 
  </p>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.phone_number %></td>
        <td><%= entry.email %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Entry', new_entry_path %>
<%= link_to 'Back to Main Menu', menu_show_path %>
<h2>Import Entries from CSV</h2>

<%= form_tag import_address_books_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<h2>Download CSV</h2>
<%= link_to "Click Here to Download CSV", address_books_path(format: "csv") %>
